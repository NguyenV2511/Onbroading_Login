<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_gravity="end"
            android:src="@drawable/vnlanguage">
        </ImageView>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_Main_Lg"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/main_logo"></ImageView>

    <TextView
        android:id="@+id/txt_App_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_Main_Lg"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp">
    </TextView>

    <TextView
        android:id="@+id/txt_onboardingSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_App_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15dp"></TextView>

    <Button
        android:id="@+id/btn_onboardingLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_onboardingSlogan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:width="330dp"
        android:height="45dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinsregular"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold">

    </Button>

    <Button
        android:id="@+id/btn_onboardingCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_onboardingLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:width="330dp"
        android:height="45dp"
        android:background="@drawable/buton_shape_black_border"
        android:fontFamily="@font/poppinsregular"
        android:text="Create account"
        android:textColor="@color/primaryColor"
        android:textSize="15dp"
        android:textStyle="bold">

    </Button>

</RelativeLayout>